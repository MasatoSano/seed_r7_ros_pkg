<?xml version="1.0"?>

<!-- XML namespaces -->
<robot name="arm_upper" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find seed_r7_description)/urdf/gazebo.xacro" />

  <xacro:macro name="arm_upper" params="base_link disable_mesh:=false r_hand_link:=r_hand_link">
  <!-- ============================   typeF_upper   ============================ -->
  <link name="${base_link}">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/shoulder_y.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.07" radius="0.04"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/shoulder_y.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="1.257" />
      <origin xyz="0 0 0.0" rpy="0 -0 0"/>
      <inertia ixx="0.034" ixy="0" ixz="0" iyy="0.034" iyz="0" izz="0.018"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="${base_link}" />

  <link name="shoulder_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/shoulder_p.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.01" radius="0.04"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/shoulder_p.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="0.242" />
      <origin xyz="0 -0.02 0.015" rpy="0 -0 0"/>
      <inertia ixx="0.00133" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.00133"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="shoulder_link" />

  <link name="upperarm_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 -0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/upperarm.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0.14" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.3" radius="0.04"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/upperarm.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
     <mass value="0.574" />
      <origin xyz="0.005 0 -0.0654" rpy="0 -0 0"/>
      <inertia ixx="0.00214" ixy="0" ixz="0" iyy="0.00217" iyz="0" izz="0.003"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="upperarm_link" />

  <link name="elbow_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="-0.022 0 0.02" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/elbow.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="-0.022 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.15" radius="0.04"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/elbow.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="0.711" />
      <origin xyz="-0.03 0 -0.0546" rpy="0 -0 0"/>
      <inertia ixx="0.00178" ixy="0" ixz="0" iyy="0.00179" iyz="0" izz="0.0035"/> 
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="elbow_link" />

  <link name="forearm_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/forearm.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.12" radius="0.04"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/forearm.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="0.132" />
      <origin xyz="0.006 0 -0.0738" rpy="0 -0 0"/>
      <inertia ixx="0.0007" ixy="0" ixz="0" iyy="0.0007" iyz="0" izz="0.0004"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="forearm_link" />

  <link name="wrist_r_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/wrist_r.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0" rpy="1.57 1.57 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.005"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/wrist_r.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" rpy="0 -0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="wrist_roll" />

  <link name="wrist_p_link">
    <xacro:unless value="${disable_mesh}"> <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://seed_r7_description/meshes/typeA_arm/wrist_p.dae" scale="1 1 1" />
      </geometry>
    </visual> </xacro:unless>
    <xacro:unless value="${disable_mesh}"> <collision>
      <origin xyz="0 0 0" rpy="1.570 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.005"/>-->
        <!--<mesh filename="package://seed_r7_description/meshes/typeA_arm/wrist_p.dae" scale="1 1 1" />-->
      </geometry>
    </collision> </xacro:unless>
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" rpy="0 -0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>
  <xacro:gazebo_link_reference link_name="wrist_pitch" />

  <joint name="shoulder_y_joint" type="revolute">
    <parent link="${base_link}"/>
    <child  link="shoulder_link"/>
    <origin xyz="0 0 0.083" rpy="0 0 0 "/>
    <axis   xyz="0 0 1"/>
    <limit lower="-2.09" upper="2.09" effort="100" velocity="1.2" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="shoulder_y_joint" />

  <joint name="shoulder_p_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child  link="upperarm_link"/>
    <origin xyz="0.0055 0 0.028" rpy="0 0 0 "/>
    <axis   xyz="0 1 0"/>
    <!-- from -88 to 15 degrees-->
    <limit lower="0" upper="1.57" effort="200" velocity="0.6" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="shoulder_p_joint" />

  <joint name="elbow_joint" type="revolute">
   u <parent link="upperarm_link"/>
    <child  link="elbow_link"/>
    <origin xyz="0.02 0 0.322" rpy="0 -0 0 "/>
    <axis   xyz="0 1 0"/>
    <!-- from -171 to 0 degrees-->
    <limit lower="0" upper="3.14" effort="100" velocity="1.2" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="elbow_joint" />

  <joint name="wrist_y_joint" type="revolute">
    <parent link="elbow_link"/>
    <child  link="forearm_link"/>
    <origin xyz="-0.022 0 0.138" rpy="0 -0 0 "/>
    <axis   xyz="0 0 1"/>
    <!-- from -180 to 180 degrees-->
    <limit lower="-2.09" upper="2.09" effort="100" velocity="1.3" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="wrist_y_joint" />
 
  <joint name="wrist_r_joint" type="revolute">
    <parent link="forearm_link"/>
    <child  link="wrist_r_link"/>
    <origin xyz="0 0 0.132" rpy="0 -0 1.570 "/>
    <axis   xyz="0 1 0"/>
    <!-- from -25 to 85 degrees-->
    <limit lower="-0.17" upper="0.17" effort="100" velocity="1.05" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="wrist_r_joint" />

  <joint name="wrist_p_joint" type="revolute">
    <parent link="wrist_r_link"/>
    <child  link="wrist_p_link"/>
    <origin xyz="0 -0.005 0" rpy="0 0 -1.570 "/>
    <axis   xyz="0 1 0"/>
    <!-- from -5 to 5 degrees-->
    <limit lower="-0.7" upper="0.87" effort="100" velocity="1.4" />
    <dynamics damping="0.2" friction="0" />
  </joint>
  <xacro:gazebo_transmission joint_name="wrist_p_joint" />

  <joint name="wrist_connector" type="fixed">
    <parent link="wrist_p_link"/>
    <child  link="${r_hand_link}"/>
    <origin xyz="0 0 -0.003" rpy="0 3.14 -1.570 "/>
    <!-- from -25 to 85 degrees-->
  </joint>
  <xacro:gazebo_transmission joint_name="wrist_connector" />

  </xacro:macro> 

</robot>
